<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".Activity.HomePrivacy">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Switch
            android:id="@+id/switch_hide_age"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Hide age"/>

        <Switch
            android:id="@+id/switch_hide_gender"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Hide gender"/>

        <Switch
            android:id="@+id/switch_hide_location"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Hide location"/>

        <Switch
            android:id="@+id/hide_message"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Filter inappropriate language"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>