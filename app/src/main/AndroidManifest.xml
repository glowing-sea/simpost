<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.login">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Login">
        <activity
            android:name=".Activity.FollowerPage"
            android:exported="false" />
        <activity
            android:name=".Activity.AdminDeleteUserPage"
            android:exported="false"
            android:parentActivityName=".Activity.AdminPage" />
        <activity
            android:name=".Activity.AdminUpdateUserPage"
            android:exported="false"
            android:label="@string/update_user"
            android:parentActivityName=".Activity.AdminPage" />
        <activity
            android:name=".Activity.AdminAddUserPage"
            android:exported="false"
            android:label="@string/add_user"
            android:parentActivityName=".Activity.AdminPage" />
        <activity
            android:name=".Activity.AdminPage"
            android:exported="false"
            android:label="@string/admin"
            android:parentActivityName=".Activity.LoginPage" />
        <activity
            android:name=".Activity.SearchPage"
            android:exported="false" />
        <activity
            android:name=".Activity.HomePage"
            android:exported="false" />
        <activity
            android:name=".Activity.PostsPage"
            android:exported="false" />
        <activity
            android:name=".Activity.SearchResultPage"
            android:exported="false"
            android:label="Search result" />
        <activity
            android:name=".Activity.SignupPage"
            android:exported="false"
            android:parentActivityName=".Activity.LoginPage" />
        <activity
            android:name=".Activity.ViewPost"
            android:exported="false"
            android:parentActivityName=".Activity.HomePage" />
        <activity
            android:name=".Activity.SettingPage"
            android:exported="false"
            android:label="Settings" />
        <activity
            android:name=".Activity.CreatePost"
            android:exported="false"
            android:label="Create Your Post" />
        <activity
            android:name=".Activity.LoginPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>